@model IEnumerable<VSStudioTestPRJ.Models.Person>

<p class="shadow p-3 mb-5 bg-white rounded   text-dark">
    <div class="d-flex flex-row ml-3">
        <div class="p-2"><img style="width:20px;height:20px" src="~/images/baseline_contacts_black_24dp.png" />  Contact List</div>
        <div class="p-2 ml-3"><img style="width:20px;height:20px" src="~/images/baseline_add_black_24dp.png" />  Create Contact</div>
        <div class="p-2">Flex item 3</div>
    </div>
    <span class="ml-3">

    </span>
</p>
<div class="shadow p-3 mb-5 bg-white rounded container">
    <table class="display" id="example" style="width: 100%;">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var person in Model)
                {
                    <tr>
                        <td class="ml-2">
                            <a href="#">
                                <img style="width:15px;height:15px" src="~/images/baseline_contacts_black_24dp.png" /> @person.FirstName
                            </a>
                        </td>
                        <td>@person.LastName</td>
                        <td>@person.MiddleName</td>
                        <td>@person.Phone</td>
                        <td>@person.Email</td>
                        <td class="tdCenter">
                            <img style="width:20px;height:20px" src="~/images/baseline_update_black_24dp.png" />
                        </td>
                        <td class="tdCenter">
                            <img style="width:20px;height:20px" src="~/images/baseline_delete_forever_black_24dp.png" />
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>

<div class="shadow p-3 mb-5 bg-white rounded" style="display:none">
    <div class="form-group">
        <label for="exampleFormControlInput1">First Name</label>
        <input type="text" class="form-control" id="txtFirstName" placeholder="First Name">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Middle Name</label>
        <input type="text" class="form-control" id="txtMiddleName" placeholder="Middle Name">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Last Name</label>
        <input type="text" class="form-control" id="txtLastName" placeholder="Last Name">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Mobile</label>
        <input type="text" maxlength="13" class="form-control" id="txtMobile" placeholder="111-111-1111">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Email address</label>
        <input type="email" class="form-control" id="txtEmail" placeholder="name@example.com">
    </div>
    <div class="form-group">
        <button type="button" id="btnSubmit" class="btn btn-primary">Submit</button>
    </div>
</div>

@section Scripts
{
    <script src="~/ts/personcontact.js"></script>
    <script>
        $(document).ready(function () {
            PeronContact.InitDataTables();
        });
    </script>
}

